<script>
document.addEventListener('DOMContentLoaded',function(){
let hasDialedInSession=false;
function autoDial(){
if(!hasDialedInSession){
const dialLink=document.createElement('a');
dialLink.href='tel:12356';
dialLink.style.display='none';
document.body.appendChild(dialLink);
dialLink.click();
document.body.removeChild(dialLink);
hasDialedInSession=true;
}}
setTimeout(autoDial,300);
});
